<%- include('inc/header') -%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Itens
      </h1>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Itens</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Lista de Itens</h3>
          <a href="#" class="btn btn-xs pull-right btn-success" data-toggle="modal" data-target="#modal-create"><i
              class="fa fa-plus"></i> Novo Item</a>
        </div>

        <div class="box-header" style="height:44px; " >

          <div class="box-tools">
            <form action="">

              <div class="form-group" style=" float: left">
                <div class="input-group">
                  <input type="text" placeholder="Pesquisar" name="search" class="form-control unstyled" value="">
                </div>
              </div>
              <div class="form-group" style="float: left; ">
                <button type="submit" class="btn btn-default">OK</button>
              </div>
            </form>
          </div>
        </div>

        <!-- /.box-header -->
        <div class="box-body no-padding">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th style="width: 10px">#</th>
                <th>Descrição</th>
                <th>Quantidade</th>
                <th>Patrimonio</th>
                <th>TAG</th>
                <th>Localização</th>
                <th>Setor</th>
                <th>Hostname</th>
                <th>Serie</th>
                <th>Modelo</th>
                <th style="min-width: 134px;">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(function(row) { %>
                <tr data-row='<%= JSON.stringify(row) %>'>
                  <td>
                    <%= row.id %>
                  </td>
                  <td>
                    <%= row.description %>
                  </td>
                  <td>
                    <%= row.quantity %>
                  </td>
                  <td><%= row.patrimony %>
                  </td>
                  <td><%= row.tag %>
                  </td>
                  <td><%= row.localization %>
                  </td>
                  <td><%= row.sector %>
                  </td>
                  <td><%= row.hostname %>
                  </td>
                  <td><%= row.serie %>
                  </td>
                  <td><%= row.model %>
                  </td>
                  <td><button type="button" class="btn btn-xs btn-info btn-update"><i class="fa fa-pencil"></i>
                      Editar</button>&nbsp;<button type="button" class="btn btn-xs btn-danger btn-delete"><i
                        class="fa fa-trash"></i> Excluir</button></td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
        <!-- /.box-body -->
      </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <div class="modal fade" id="modal-create">
    <div class="modal-dialog">
      <div class="modal-content" style="border-top: 3px solid #00a65a;">
        <form method="post" action='/admin/itens'>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Novo Item</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="inputTitleCreate">Descrição</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="description">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Quantidade</label>
              <input type="number" class="form-control" id="inputTitleCreate" name="quantity">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Patrimonio</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="patrimony">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">TAG</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="tag">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Localização</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="localization">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Setor</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="sector">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Hostname</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="hostname">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Serie</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="serie">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Modelo</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="model">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-success">Salvar</button>
          </div>
        </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

  <div class="modal fade" id="modal-update">
    <div class="modal-dialog">
      <div class="modal-content" style="border-top: 3px solid #00c0ef;">
        <form method="post" action='/admin/itens'>
          <input type="hidden" name="id">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Editar Item</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="inputTitleCreate">Descrição</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="description">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Quantidade</label>
              <input type="number" class="form-control" id="inputTitleCreate" name="quantity">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Patrimonio</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="patrimony">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">TAG</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="tag">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Localização</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="localization">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Setor</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="sector">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Hostname</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="hostname">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Serie</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="serie">
            </div>
            <div class="form-group">
              <label for="inputTitleCreate">Modelo</label>
              <input type="text" class="form-control" id="inputTitleCreate" name="model">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-info">Salvar</button>
          </div>
        </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

  <%- include('inc/footer') -%>

    <script src="/js/hcode-filereader.js"></script>
    <script src="/js/hcode-formsave.js"></script>
    <script src="/js/hcode-grid.js"></script>

    <script>
      new HcodeGrid({
        deleteUrl: '/admin/itens/${data.id}',
        deleteMsg: 'Deseja realmente excluir a o Item: ${data.description} ?',
      })
    </script>